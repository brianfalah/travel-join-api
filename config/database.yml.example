# Using SQLlite
development:
  adapter: sqlite3
  database: db/development.sqlite3
  pool: 5
  timeout: 5000

production:
  adapter: mysql2
  encoding: utf8
  reconnect: false
  database: travel_join_api_production
  pool: 5
  username: root
  password:
  socket: /var/run/mysqld/mysqld.sock